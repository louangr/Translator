<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Translator.Resources">
    <Color x:Key="LightContainerBackgroundColor">#DFDFDF</Color>
    <Color x:Key="DarkContainerBackgroundColor">#151515</Color>

    <SolidColorBrush x:Key="SublabelColorBrush"
                     Color="{ThemeResource TextFillColorPrimary}"
                     Opacity="0.6" />

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ContainerBackgroundColor"
                             Color="{StaticResource LightContainerBackgroundColor}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="ContainerBackgroundColor"
                             Color="{StaticResource DarkContainerBackgroundColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
